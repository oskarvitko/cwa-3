@model _3_задание.Models.Product
@{
    ViewBag.Title = "Details";
}

<h2 class="Products-List__title">Details</h2>

@if (Model.Name != null)
{
<ul>
    <li><b>ID:</b> @Model.Id</li>
    <li><b>Name:</b> @Model.Name</li>
    <li><b>Description:</b> @Model.Description</li>
    <li><b>Price:</b> @Model.Price</li>
</ul>
}
else
{
    <h4 style="text-align: center;">No product</h4>
}